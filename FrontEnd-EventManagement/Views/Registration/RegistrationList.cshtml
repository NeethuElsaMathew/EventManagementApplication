@model IEnumerable<RegistrationDTO>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Registration List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        EventId
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int recordNumber = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@recordNumber</td>
                        <td> @item.Name </td>
                        <td> @item.PhoneNumber </td>
                        <td> @item.EmailAddress </td>
                        <td> @item.EventId </td>
                    </tr>
                    recordNumber++;
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-3">
            <a asp-controller="Event" asp-action="ViewRegistrationAndCreateEvent" class="btn-primary btn btn-sm form-control">Back to List</a>
        </div>
    </div>
</div>
